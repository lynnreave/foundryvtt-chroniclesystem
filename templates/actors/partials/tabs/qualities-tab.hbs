<div class="tab" data-group="primary" data-tab="qualities">
    <header class="header-field">
        <span>{{localize "CS.sheets.character.destinyPoints"}}</span>
    </header>
    <section class="destiny flexrow">
        <section class="">
        </section>
        <section class="">
        </section>
        <section class="flexrow">
            {{> (formGroup) labelText="Current:" id="system.destinyPoints.current" value=character.destinyPoints.current inputCssClass="small-field" placeHOlder="Current" dataType="Number" }}
            {{> (formGroup) labelText="Max:" id="system.destinyPoints.max" value=character.destinyPoints.max inputCssClass="small-field" placeHOlder="Max" dataType="Number" }}
        </section>
    </section>
    <header class="header-field">
        <span>{{localize "CS.sheets.character.tabs.qualities"}}</span>
    </header>
    <section class="qualities flexrow">
        <section class="benefits">
            <header class="header-field">
                <span>Benefits</span>
            </header>
            <ol  class="qualities-list">
                {{#each character.owned.benefits}}
                    <li  class="item quality" data-item-id="{{_id}}">
                        <div class="quality-label item-name">
                            <label class="flex3">{{name}} </label>
                            {{#if ../owner}}
                            <div class='item-controls'>
                                <button type='button' class='item-edit'>
                                    <i class='fas fa-edit'></i>
                                </button>
                            </div>
                            {{/if}}
                        </div>

                        <div class="description">{{enrich system.description}}</div>
                    </li>
                {{/each}}
            </ol>
        </section>
        <section class="drawbacks">
            <header class="header-field">
                <span>Drawbacks</span>
            </header>
            <ol  class="qualities-list">
                {{#each character.owned.drawbacks}}
                    <li  class="item quality" data-item-id="{{_id}}">
                        <div class="quality-label item-name">
                            <label class="flex3">{{name}} </label>
                            {{#if ../owner}}
                                <div class='item-controls'>
                                    <button type='button' class='item-edit'>
                                        <i class='fas fa-edit'></i>
                                    </button>
                                </div>
                            {{/if}}
                        </div>
                        <div class="description">{{enrich system.description }}</div>
                    </li>
                {{/each}}
            </ol>
        </section>
    </section>
</div>
