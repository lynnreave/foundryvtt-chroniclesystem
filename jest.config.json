{
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
        "<rootDir>/tests",
        "<rootDir>/src/module/system/csConstants.js",
        "<rootDir>/src/util/logger.js",
        "<rootDir>/src/util/systemUtils.js",
        "<rootDir>/src/module/type"
    ],
    "testEnvironment": "node",
    "modulePaths": [
        "<rootDir>",
        "<rootDir>/src"
    ],
    "moduleNameMapper": {
        "^@actor/(.*)$": "<rootDir>/src/module/actor/$1",
        "^@actor$": "<rootDir>/src/module/actor",
        "^@item/(.*)$": "<rootDir>/src/module/item/$1",
        "^@item$": "<rootDir>/src/module/item",
        "^@roll/(.*)$": "<rootDir>/src/module/roll/$1",
        "^@module/(.*)$": "<rootDir>/src/module/$1",
        "^@system/(.*)$": "<rootDir>/src/module/system/$1",
        "^@util$": "<rootDir>/src/util",
        "^@mocks/(.*)$": "<rootDir>/tests/mocks/$1"
    },
    "preset": "es-jest"
}
